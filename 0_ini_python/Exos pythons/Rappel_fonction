import matplotlib.pyplot as plt
import numpy as np

def affine(a,b,x=np.arange(-10,10,1)): #x avec une valeur par défaut
    '''
    retourne la fonction affine
    input: 
    a : coeff dir
    b : ordonnée à l'origine
    x: variable

    output: 
    y : la fonction affine
    '''
    y = a*x +b
    return y,x


x= np.arange(-10,10,1)
plt.plot( x, affine(1,2,x))
plt.grid()
plt.show()

affine()